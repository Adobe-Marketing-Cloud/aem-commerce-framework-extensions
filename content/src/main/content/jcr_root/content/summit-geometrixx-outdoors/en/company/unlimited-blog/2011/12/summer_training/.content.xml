                sling:resourceType="social/blog/components/entrytext"
                text="&lt;p>See what our own staff members do to beat the heat.&lt;br>&#xa;&lt;/p>&#xa;"/>
            <textimage
                jcr:created="{Date}2011-12-06T15:14:27.606+01:00"
