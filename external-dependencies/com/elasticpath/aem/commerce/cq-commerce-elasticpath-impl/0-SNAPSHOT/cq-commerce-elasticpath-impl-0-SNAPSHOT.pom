<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<!-- ====================================================================== -->
	<!-- P A R E N T P R O J E C T D E S C R I P T I O N -->
	<!-- ====================================================================== -->
	<parent>
		<groupId>com.elasticpath.aem.commerce</groupId>
		<artifactId>aem-commerce-parent</artifactId>
		<version>0-SNAPSHOT</version>
	</parent>

	<!-- ====================================================================== -->
	<!-- P R O J E C T D E S C R I P T I O N -->
	<!-- ====================================================================== -->
	<artifactId>cq-commerce-elasticpath-impl</artifactId>
	<packaging>bundle</packaging>

	<name>Elastic Path Commerce Core</name>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

		<!--Jacoco-->
		<jacoco.instruction.covered-ratio>0.41</jacoco.instruction.covered-ratio>
		<jacoco.branch.covered-ratio>0.30</jacoco.branch.covered-ratio>
		<jacoco.line.covered-ratio>0.41</jacoco.line.covered-ratio>
		<jacoco.complexity.covered-ratio>0.29</jacoco.complexity.covered-ratio>
		<jacoco.method.covered-ratio>0.33</jacoco.method.covered-ratio>
		<jacoco.class.covered-ratio>0.45</jacoco.class.covered-ratio>
	</properties>

	<!-- ====================================================================== -->
	<!-- B U I L D D E F I N I T I O N -->
	<!-- ====================================================================== -->
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.3.2</version>
				<executions>
					<execution>
						<id>check-json-annotations</id>
						<phase>compile</phase>
						<goals>
							<goal>java</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<includeProjectDependencies>true</includeProjectDependencies>
					<includePluginDependencies>true</includePluginDependencies>
					<mainClass>com.fasterxml.jackson.contrib.jsonpath.annotation.AnnotationVerifier</mainClass>
					<killAfter>-1</killAfter>
					<arguments>
						<argument>${project.basedir}/src/main/java/com/elasticpath/</argument>
					</arguments>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-scr-plugin</artifactId>
			</plugin>

			<plugin>
				<groupId>org.apache.sling</groupId>
				<artifactId>maven-sling-plugin</artifactId>
				<version>2.1.0</version>
			</plugin>

			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Embed-Dependency>
							jaxb-impl,
							commons-validator,
							commons-lang3,
							jsr305,
							dom4j;scope=compile|runtime
						</Embed-Dependency>
						<Embed-Directory>OSGI-INF/lib</Embed-Directory>
						<Embed-Transitive>true</Embed-Transitive>
						<Export-Package>
							com.elasticpath.aem.*,
							com.elasticpath.rest.sdk.*
						</Export-Package>
						<Import-Package>
							javax.ws.rs.client,
							javax.ws.rs.core,
							com.elasticpath.commerce.config,
							com.fasterxml.jackson.*,
							com.adobe.cq.commerce.api;version=2.0.0,
							com.adobe.cq.commerce.api.collection;version=1.0.0,
							com.adobe.cq.commerce.api.promotion;version=1.2.1,
							com.adobe.cq.commerce.common;version=3.2.0,
							com.adobe.cq.commerce.common.promotion;version=1.2.0,
							com.adobe.cq.commerce.pim.api;version=1.3.1,
							com.adobe.cq.commerce.pim.common;version=1.3.1,
							com.adobe.granite.security.user;version=1.3.0,
							com.adobe.granite.workflow.launcher;version=1.0.0,
							com.day.cq.analytics.sitecatalyst.util;version=5.7.0,
							com.day.cq.commons;version=5.7.0,
							com.day.cq.commons.inherit;version=5.7.0,
							com.day.cq.i18n;version=5.4.0,
							com.day.cq.personalization;version=5.8.0,
							com.day.cq.tagging;version=5.7.0,
							com.day.cq.wcm.api;version=1.7.0,
							com.day.cq.wcm.api.designer;version=5.7.0,
							com.day.cq.wcm.commons;version=5.8.0,
							com.day.cq.wcm.foundation;version=5.9.0,
							com.day.image;version=1.0.0,
							javax.jcr;version=2.0.0,
							javax.jcr.nodetype;version=2.0.0,
							javax.jcr.query;version=2.0.0,
							javax.servlet.http;version=3.0.0,
							org.apache.commons.collections;version=3.2.1,
							org.apache.commons.lang;version=2.5.0,
							org.apache.jackrabbit.commons;version=2.4.0,
							org.apache.jackrabbit.util;version=2.4.0,
							org.apache.sling.api;version=2.3.0,
							org.apache.sling.api.request;version=2.4.0,
							org.apache.sling.api.resource;version=2.6.0,
							org.apache.sling.commons.json;version=2.0.4,
							org.apache.sling.commons.osgi;version=2.2.0,
							org.apache.sling.jcr.api;version=2.2.0,
							org.apache.sling.settings;version=1.3.0,
							org.osgi.service.component;version=1.2.1,
							org.slf4j;version=1.7.6,
							*;resolution:=optional
						</Import-Package>
					</instructions>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
			</plugin>

			<!-- BEGIN - ElasticPath Style and Code Coverage Plugins -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-checkstyle-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-pmd-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.jacoco</groupId>
				<artifactId>jacoco-maven-plugin</artifactId>
			</plugin>
			<!-- END - ElasticPath Style and Code Coverage Plugins -->
		</plugins>
	</build>

